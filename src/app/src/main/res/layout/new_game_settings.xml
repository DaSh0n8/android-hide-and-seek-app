<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/create_a_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create a new game"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="321dp"
        android:layout_height="187dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_a_new_game" />

    <TextView
        android:id="@+id/modeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        android:layout_marginStart="16dp"/>

    <Spinner
        android:id="@+id/spinnerGameMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/modeTextView"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="316dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerGameMode"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/hidersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiders:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editHiders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Number of Hiders"
        android:inputType="number"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/hidersTextView"
        app:layout_constraintTop_toTopOf="@+id/hidersTextView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="316dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@+id/editHiders"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/seekersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seekers:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editSeekers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Number of Seekers"
        android:inputType="number"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/seekersTextView"
        app:layout_constraintTop_toTopOf="@+id/seekersTextView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="316dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editSeekers"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editGameTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Game Time (minutes)"
        android:inputType="number"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/timeTextView"
        app:layout_constraintTop_toTopOf="@+id/timeTextView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="224dp"
        android:layout_height="70dp"
        android:text="Start Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.204" />

</androidx.constraintlayout.widget.ConstraintLayout>
